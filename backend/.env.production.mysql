APP_NAME=Aoisora
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_ON_SERVER
APP_DEBUG=false
APP_URL=https://api.auraorientalis.vn

LOG_CHANNEL=stack
LOG_LEVEL=error

# MySQL Database (PA Vietnam Shared Hosting)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=YOUR_DATABASE_NAME
DB_USERNAME=YOUR_DATABASE_USER
DB_PASSWORD=YOUR_DATABASE_PASSWORD

# Disable WebSocket for demo (shared hosting limitation)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# CORS - Frontend URL
SANCTUM_STATEFUL_DOMAINS=aoisora.auraorientalis.vn
SESSION_DOMAIN=.auraorientalis.vn

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@auraorientalis.vn
MAIL_FROM_NAME="${APP_NAME}"
