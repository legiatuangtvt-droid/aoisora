# OptiChain Backend - Google Cloud Run Deployment
# Copy this file to .env when deploying to Cloud Run

# Application
APP_NAME=OptiChain API
APP_VERSION=1.0.0
DEBUG=False
API_PREFIX=/api/v1

# Database - Cloud SQL PostgreSQL
# Format: postgresql://user:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# Get from: gcloud sql instances describe INSTANCE_NAME
DATABASE_URL=postgresql://optichain_user:YOUR_PASSWORD@/optichain?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=vZR9X7KpQ_M8NnYyH2JqLw5TFx3Bc4Ga1Sd6Vh0Ui9E
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Add your Firebase Hosting URL
# Example: https://optichain-production.web.app
ALLOWED_ORIGINS=https://your-app.web.app,https://your-app.firebaseapp.com

# Port (Cloud Run provides $PORT)
PORT=8080
